<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/top_background"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="@drawable/top_background1"
        android:contentDescription="topbackground" />

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="Welcome\nBack"
            android:textColor="#FF5722"
            android:textSize="56sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:drawableStart="@drawable/email"
            android:drawablePadding="14dp"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:drawableStart="@drawable/password"
            android:drawablePadding="14dp"
            android:hint="Password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnLogin"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_gravity="end"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_arraw1"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLoginWFacebook"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rectangle_transparent_button"
                android:drawableEnd="@drawable/facebook"
                android:nextFocusRight="@id/btnLoginWGoogle"
                android:text="Facebook"
                android:textColor="#3b5998"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnLoginWGoogle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_transparent_button"
                android:drawableEnd="@drawable/google"
                android:text="Google"
                android:textColor="#3b5998"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Are you new user? Register"
            android:textAlignment="center"
            android:textColor="#3b5998"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>